<h1>Recipes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @recipes %>
  </tbody>
</table>

<br>

<h2>Quick Meals</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @recipes.quick_meals %>
  </tbody>
</table>

<br>

<div id="jquerecipes">
</div>

<%= link_to 'New Recipe', new_recipe_path %>

<script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
    $.getJSON("/recipes", function(data){
      $.each(data, function(i, recipe) {
        content = '<h2>' + recipe.name + '</h2>';
        $(content).appendTo("#jquerecipes");
      });
    });
  });
</script>
