<h1 data-id=<%= @recipe.id %>><span class="recipeName"></span></h1>

<h3>Ingredients</h3>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th colspan="3">Unit</th>
    </tr>
  </thead>

  <tbody id="recipeIngredients">
  </tbody>
</table>

<p>
  <h3>Instructions</h3>
  <p><span class="recipeInstructions"></span></p>
</p>

<p>
  <h3>Duration</h3><br />
  <p><span class="recipeDuration"></span></p>
</p>

<p>
  <br />
  <% if @recipe.user == current_user %>
    <%= link_to 'Edit', edit_recipe_path(@recipe) %> |
  <% end %>
  <%= link_to 'Back', recipes_path %>
  <br />
</p>


<p>
  <h3>Comments</h3><br />
  <%= button_to "Add comment", new_recipe_comment_path(@recipe), method: :get, class: 'btn btn-outline-success btn-sm' %><br />
  <div id="recipeComments"></div>
</p>
